include $(SRC)/cmd/Makefile.cmd
include $(SRC)/test/Makefile.com

# Shell scripts...
PROG =	acquire-spray \
	acquire-compare \
	kmc-update

# Binaries
PROG +=	eacq-enabler \
	kmc-updater

ROOTOPTPKG = $(ROOT)/opt/os-tests
TESTDIR = $(ROOTOPTPKG)/tests/pf_key

CMDS = $(PROG:%=$(TESTDIR)/%)
$(CMDS) := FILEMODE = 0555

LDLIBS += -lsocket
kmc-updater := LDLIBS += -lipsecutil

all: $(PROG)

install: all $(CMDS)

lint:

clobber: clean
	-$(RM) $(PROG)

clean:
	-$(RM) $(CLEANFILES)

$(CMDS): $(TESTDIR) $(PROG)

$(TESTDIR):
	$(INS.dir)

$(TESTDIR)/%: %
	$(INS.file)
